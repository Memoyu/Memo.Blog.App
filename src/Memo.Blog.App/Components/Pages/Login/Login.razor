@page "/login"
@attribute [AllowAnonymous]
@layout LoginLayout

<div class="login">
    <div Style="margin-top: 10%" class="d-flex justify-center">
        <MImage AspectRatio="16/9d"
                Width="84"
                Src="images/logo.png"
                Contain
                Eager
                alt="memo.blog">
        </MImage>
    </div>

    <MTextField @bind-Value="@_username"
                HideDetails="true"
                Placeholder="用户名"
                Clearable>
    </MTextField>

    <MTextField @bind-Value="@_password"
                HideDetails="true"
                Placeholder="密码"
                Clearable
                Type="password"
                OnEnter="@LoginAsync">
    </MTextField>

    <MButton Block Rounded
             Class="text-capitalize"
             Large
             Color="primary"
             Disabled="@LoginBtnDisabled"
             OnClick="@LoginAsync"
             Loading="@_loggingIn">
        登录
    </MButton>

    <div class="d-flex justify-end">
        <MButton Text
                 Color="primary"
                 Small
                 OnClick="@VisitorLoginAsync"
                 Class="text-none">
            游客登录
        </MButton>
    </div>
</div>