@page "/"
@using Memo.Blog.App.Components.Pages.Home.Components.Article
@using Memo.Blog.App.Components.Pages.Home.Components.Dashboard
@using Memo.Blog.App.Components.Pages.Home.Components.Moment

<TopTabs @bind-Value="tab" Items="tabItems" />

<MSwiper Index=@tab.ToInt32() IndexChanged="SwiperIndexChanged">
    <MSwiperSlide class="home-swiper-slide">
        <MContainer Style="overflow-y: auto;" Fluid>
            <Dashboard />
        </MContainer>
    </MSwiperSlide>

    <MSwiperSlide  class="home-swiper-slide">
        <MContainer Style="overflow-y: auto;" Fluid>
            <Article />
        </MContainer>
    </MSwiperSlide>

    <MSwiperSlide class="home-swiper-slide">
        <MContainer Style="overflow-y: auto;" Fluid>
            <Moment />
        </MContainer>
    </MSwiperSlide>
</MSwiper>


