@page "/"
@using Memo.Blog.App.Components.Pages.Home.Components.Article
@using Memo.Blog.App.Components.Pages.Home.Components.Dashboard
@using Memo.Blog.App.Components.Pages.Home.Components.Moment

<MAppBar Fixed ElevateOnScroll>
    <TopTabs @bind-Value="tab" Items="tabItems" />
</MAppBar>

<MSwiper AutoHeight Style="margin-top: 56px;" Index=@tab.ToInt32() IndexChanged="SwiperIndexChanged">
    <MSwiperSlide>
        <Dashboard />
    </MSwiperSlide>
    <MSwiperSlide>
        <Article />
    </MSwiperSlide>
    <MSwiperSlide>
        <Moment />
    </MSwiperSlide>
</MSwiper>

