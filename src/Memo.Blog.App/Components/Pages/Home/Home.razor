@page "/"
@using Memo.Blog.App.Components.Components.Article
@using Memo.Blog.App.Components.Components.Dashboard
@using Memo.Blog.App.Components.Components.Moment

<Tabs @bind-Value="tab"
      Items="tabItems">
</Tabs>

<MSwiper Index=@tab.ToInt32() IndexChanged="SwiperIndexChanged">
    <MSwiperSlide>
        <MLazy Class="ml-3 mr-3" Options="intersectionObserverInit">
            <DashboardList />
        </MLazy>
    </MSwiperSlide>
    <MSwiperSlide>
        <MLazy Class="ml-3 mr-3" Options="intersectionObserverInit">
            <ArticleList />
        </MLazy>
    </MSwiperSlide>
    <MSwiperSlide>
        <MLazy Class="ml-3 mr-3" Options="intersectionObserverInit">
            <MomentList />
        </MLazy>
    </MSwiperSlide>
</MSwiper>
