<MRow Dense>
    @foreach (var moment in Moments)
    {
        <MCol Cols="12">
            <MCard Flat
                   Rounded="@("lg")"
                   Class="pa-3"
                   Href="@($"/moment/detail/{moment.MomentId}")"
                   data-page-stack-strategy>
                <div>
                    <div class="d-flex flex-no-wrap justify-space-between">
                        <div>
                            <div class="subtitle-2 text-truncate-l3">
                                @moment.Content
                            </div>
                            <div class="mt-1 caption d-flex flex-wrap align-center">
                                @foreach (var tag in moment.Tags)
                                {
                                    <MChip Label Color="primary" XSmall Class="mr-1 px-2"
                                           Style="min-width: min-content;">
                                        @tag
                                    </MChip>
                                }
                            </div>
                        </div>
                    </div>

                    <div class="mt-3 caption d-flex justify-space-between">
                        <div class="d-flex align-center">
                            @($"点赞 {moment.Likes} · 评论 {moment.Comments}")
                        </div>

                        <div class=" text--disabled">
                            @($"{moment.CreateTime.ToString("yyyy-MM-dd HH:mm")}")
                        </div>
                    </div>
                </div>
            </MCard>
        </MCol>
    }
</MRow> 