<MBottomNavigation InputValue="Show"
                   Class="@($"justify-space-around {(Show ? "" : "m-bottom-navigation-hidden")}")"
                   Mandatory="true"
                   App="true">
    @foreach (var item in Items)
    {
        <BottomNavigationItem @key="item.Path" Value="item"/>
    }
</MBottomNavigation>

