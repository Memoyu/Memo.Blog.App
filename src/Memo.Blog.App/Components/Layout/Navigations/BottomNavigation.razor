<MBottomNavigation App
                   Routable
                   Grow
                   Shift
                   InputValue="Show"
                   Class="@($"justify-space-around {(Show ? "" : "m-bottom-navigation-hidden")}")"
                   Color="primary">
    @foreach (var item in Items)
    {
        <BottomNavigationItem @key="item.Path" Value="item"/>
    }
</MBottomNavigation>

