<MBottomNavigation App
                   Routable
                   Grow
                   Value="current"
                   ValueChanged="ValueChanged"
                   Color="primary">
    @foreach (var item in navItems)
    {
        <MButton Ripple="false" Href="@item.Path" Value="@item.Path">
            <MIcon>
                @(selected == item.Path ? item.SelectedIcon : item.Icon)
            </MIcon>
        </MButton>
    }
</MBottomNavigation>

