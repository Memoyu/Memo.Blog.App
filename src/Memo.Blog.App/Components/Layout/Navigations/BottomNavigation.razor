<MBottomNavigation App
                   Routable
                   Grow
                   @bind-Value="_current"
                   Color="primary">
    @foreach (var item in Items)
    {
        <MButton Href="@item.Path">
            <MIcon>
                @(item.Index == _current ? item.SelectedIcon : item.Icon)
            </MIcon>
        </MButton>
    }
</MBottomNavigation>

