@inherits LayoutComponentBase

<link href="css/status-bar-and-navigation-bar.css" rel="stylesheet" />

<MApp>
    <MMain>
        <MErrorHandler>
            <AuthorizeView>
                <Authorized>
                    <PPageStack TabbedPatterns="@( ["^/$", "/article", "/moment", "/user"])"
                                SelfPatterns="@( ["/article"])">
                        @Body
                    </PPageStack>
                </Authorized>
                <NotAuthorized>
                    @Body
                </NotAuthorized>
            </AuthorizeView>
        </MErrorHandler>
    </MMain>

    <BottomNavigation Items="NavigationItems" />
</MApp>

