@inherits LayoutComponentBase

<MApp>
    <MMain>
        <MErrorHandler>
            <AuthorizeView>
                <Authorized>
                    <PPageStack TabbedPatterns="@( ["^/$", "/todo", "/user"])"
                                SelfPatterns="@( ["/todo"])">
                        @Body
                    </PPageStack>
                </Authorized>
                <NotAuthorized>
                    @Body
                </NotAuthorized>
            </AuthorizeView>
        </MErrorHandler>
    </MMain>

    <BottomNavigation />
</MApp>

