﻿<MCard Elevation="0"
        Rounded="@("lg")">
    <MRow NoGutters Justify="JustifyTypes.SpaceAround">
        @foreach (var item in Items)
        {
            <MCol Cols="4">
                <div @key=item class="ml-4 mr-4 mt-4 text-center">
                    <MListItemSubtitle>
                        @item.Title
                    </MListItemSubtitle>
                    <MListItemTitle Class="mt-2 font-weight-bold text-h6">
                        @item.Value
                    </MListItemTitle>
                </div>
            </MCol>
        }
    </MRow>

